<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListMate.View.CreateShoppingList"
             Title="Add new list">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="bttnCancelList" Text="Cancel" Clicked="bttnCancelList_Clicked" />
        <ToolbarItem x:Name="bttnSaveList" Text="Save" Clicked="bttnSaveList_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="tbxListName" Placeholder="List Name"></Entry>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>